{
  "crons": [
    {
      "path": "/api/cron/generate-topic",
      "schedule": "* * * * *"
    }
  ],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true"
  },
  "installCommand": "yarn install && npx prisma generate"
}
